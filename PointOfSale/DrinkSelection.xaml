<Page x:Class="PointOfSale.DrinkSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu Category Selection">

    <Grid Margin="0,0,0,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="145*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="94*"/>
        </Grid.RowDefinitions>
        <Button Click="SelectFlavor" Grid.Column="0" Content="Sodasaurus" Grid.Row="0" Margin="10,51,9.667,10.333"/>
        <Button Grid.Column="0" Content="Jurassic Java" Grid.Row="2" Margin="10,10.333,9.667,10"/>
        <Button Grid.Column="0" Content="Water" Grid.Row="3" Margin="10,10,9.667,10"/>
        <Button Grid.Column="0" Content="Tyrannotea" Margin="10,9.667,9.667,9.667" Grid.Row="1"/>
        <Button Grid.Column="1" Content="Medium" Margin="16.333,36.667,10.333,42" Grid.RowSpan="2" Grid.Row="1"/>
        <Button Grid.Column="1" Content="Small" Margin="16.333,51,10.333,74" Grid.RowSpan="2"/>
        <Button Grid.Column="1" Content="Large" Margin="16.333,74,10.333,10" Grid.RowSpan="2" Grid.Row="2"/>
        <TextBlock Grid.Row="0" Margin="10,0" Text="Add To Order" HorizontalAlignment="Center" VerticalAlignment="Top" Height="23" Width="780" Grid.ColumnSpan="3" TextAlignment="Center"/>
        <TextBlock Grid.Row="0" Margin="10,28,9.667,0" Text="Drink" HorizontalAlignment="Center" VerticalAlignment="Top" Height="23" Width="247" TextAlignment="Center"/>
        <TextBlock Grid.Row="0" Margin="0.333,28,0.333,0" Text="Size" HorizontalAlignment="Center" VerticalAlignment="Top" Height="23" Width="266" TextAlignment="Center" Grid.Column="1"/>
        <Button Grid.Column="2" Content="Add Lemon" Margin="10.667,36.667,16,42" Grid.RowSpan="2" Grid.Row="1"/>
        <Button Grid.Column="2" Content="Sweet/Decaf/Flavor" Margin="10.667,51,16,73.667" Grid.RowSpan="2"/>
        <Button Grid.Column="2" Content="Hold Ice" Margin="10.667,74.333,16,10" Grid.RowSpan="2" Grid.Row="2"/>
        <TextBlock Grid.Row="0" Margin="0.667,28,0,0" Text="Special" HorizontalAlignment="Center" VerticalAlignment="Top" Height="23" Width="266" TextAlignment="Center" Grid.Column="2"/>
    </Grid>
</Page>
