<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ComboSelection">

    <WrapPanel>
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Width" Value ="180"/>
                <Setter Property="Height" Value="150"/>
            </Style>
        </WrapPanel.Resources>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-01.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="29,0,21,0">
                    Brontowurst Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-02.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="29,0,21,0">
                    Dino-Nuggets Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-05.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="13,0,37,0">
                    Steakosaurus Burger Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-06.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="14,0,36,0">
                    T-Rex Kingburger Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-04.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="16,0,34,0">
                    Pterodactyl Wings Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-03.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="22,0,28,0">
                    Prehistoric PB&amp;J Combo
                </TextBlock>
            </DockPanel>
        </Button>
        <Button Click="SelectCustomization" Height="160" Width="180" Margin="10">
            <Button.Background>
                <ImageBrush ImageSource="Images/DinoDiner-07.png"></ImageBrush>
            </Button.Background>
            <DockPanel Height="150" Width="200">
                <TextBlock DockPanel.Dock="Bottom" Width="150" Margin="29,0,21,0">
                    Veloci-Wrap Combo
                </TextBlock>
            </DockPanel>
        </Button>
    </WrapPanel>
</Page>
